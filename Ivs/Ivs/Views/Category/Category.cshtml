@model Ivs.Models.ResearchCategoryModel

@{
    ViewBag.Title = "Category";


    #region Phân trang
    int pageNum = 0;
    int countItem = 20;
    int min = 1;
    int max = min;
    string previous = "#";
    string next = "#";

    if ((Model.page_count % countItem) == 0)
    {
        pageNum = Model.page_count / countItem;
    }
    else
    {
        pageNum = Model.page_count / countItem + 1;
    }

    if (pageNum > 26)
    {


        min = Model.page - 12;
        max = Model.page + 13;

        if (min < 1)
        {
            max = Model.page + 13 - min;
            min = 1;

        }

        if (max > pageNum)
        {
            min = Model.page - 14 - (pageNum - max);
            max = pageNum;
        }
    }
    else
    {
        min = 1;
        max = pageNum;
    }

    if (Model.page == pageNum)
    {
        previous = Url.Action("Category", "Category", new { page = (Model.page - 1) });
    }
    else if (Model.page > 1)
    {
        previous = Url.Action("Category", "Category", new { page = (Model.page - 1) });
        next = Url.Action("Category", "Category", new { page = (Model.page + 1) });
    }
    else
    {
        next = Url.Action("Category", "Category", new { page = (Model.page + 1) });
    }
    #endregion
}
<h2>Category</h2>

@if (!string.IsNullOrEmpty((string)TempData["Success"]))
{
    <div id="success" class="success">
        @TempData["Success"]
    </div>
}
@if (!string.IsNullOrEmpty((string)TempData["Error"]))
{
    <div id="error" class="error">
        @TempData["Error"]
    </div>
}
@using (Html.BeginForm("Category", "Category", FormMethod.Get))
{
    <div class="row vertical-align">
        <div class="col-md-3">Category Code : @Html.TextBoxFor(m => m.Category.code, new { @class = "form-control" })</div>
        <div class="col-md-3">Category Name : @Html.TextBoxFor(m => m.Category.name, new { @class = "form-control" })</div>
        <div class="col-md-3">Category Parent : @Html.DropDownListFor(m => m.Category.parent_id, (SelectList)ViewBag.ListCategory, "", new { @class = "form-control" })</div>

        <div class="col-md-3 vcenter">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}

<div class="row align-right">
    <div class="btn-action">
        @Html.ActionLink("Add Category", "Add", "Category", new { }, new { @class = "btn btn-success btn-sm" })
    </div>
</div>

<div class="row top">

    <ul class="pagination">

        @if (Model.page > 1)
        {
            <li>
                <a href="@previous" title="Previous">&laquo;</a>
            </li>
        }

        @if (Model.page < pageNum - 1)
        {
            <li>
                <a href="@next" title="Next">&raquo;</a>
            </li>
        }
    </ul>

</div>
<div class="table-responsive" id="divLis">
    <table class="table table-bordered table-hover tableData">
        <tr class="headerTable">
            <th>
                No.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.parent_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.description)
            </th>
            <th>Action</th>
        </tr>
        <tbody>
            @{int n = 0; }
            @foreach (var item in Model.Categorys)
            {
                <tr>
                    <td>@(n ++)</td>
                    <td>
                        @Html.ActionLink(item.code, "View", "Category", new { @id = item.id }, new { })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.parent_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td style="text-align:center">
                        <a href="@Url.Action("Update", "Category", new { id = item.id })" title="Edit"><span class="glyphicon glyphicon-pencil"></span></a>
                        <a href="#" data-href="@Url.Action("Delete", "Category", new { id = item.id })" data-toggle="modal" data-target="#confirm-delete" title="Delete"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="row">
    @if (Model != null)
    {
        using (Html.BeginForm("Category", "Category", FormMethod.Get))
        {
    <ul class="pagination">

        @if (Model.page > 1)
                    {
                <li>
                    <a href="@previous" title="Previous">&laquo;</a>
                </li>
                }
        @for (int i = min; i <= max; i++)
                    {
                        if (Model.page != i)
                        {
                <li>
                    <a href="@Url.Action("Category", "Category", new { page = i })" t title="@i">@i</a>
                </li>
                    }
                    else
                    {
                <li class="active">
                    <a href="#" title="@i">@i</a>
                </li>
                    }
                }
        @if (Model.page < pageNum - 1)
                    {
                <li>
                    <a href="@next" title="Next">&raquo;</a>
                </li>
                }
    </ul>
        }
    }
</div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
            </div>

            <div class="modal-body">
                <p>Do you want to delete?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $('#confirm-delete').on('show.bs.modal', function (e) {
        $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));

        $('.debug-url').html('Delete URL: <strong>' + $(this).find('.btn-ok').attr('href') + '</strong>');
    });
</script>
